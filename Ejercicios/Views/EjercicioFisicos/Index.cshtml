<!-- Button trigger modal -->

<div class="mb-2">
  <button type="button" class="button" onclick="NuevoRegistroEjercicioFisico()" data-bs-toggle="modal"
    data-bs-target="#ModalEjerciciosFisicos">
    Nuevo Registro
  </button>
</div>

<input type="text" value="@ViewBag.PersonaID" id="PersonaID">



<!-- Modal -->
<div class="modal fade" id="ModalEjerciciosFisicos" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="ModalTituloEjerciciosFisicos"></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form>
          <div class="row">
            <input type="hidden" id="EjercicioFisicoID" value="0" />
            <div class="mb-3 col-12">
              <label for="TipoEjercicioID" class="form-label">Tipo de Ejercicio</label>
              @Html.DropDownList("TipoEjercicioID", null, htmlAttributes: new { @class = "form-control" })
            </div>

            <div class="mb-3 col-12">
              <label for="LugarID" class="form-label">Tipo de Lugar</label>
              @Html.DropDownList("LugarID", null, htmlAttributes: new { @class = "form-control" })
            </div>

            <div class="mb-3 col-12">
              <label for="EventoDeportivoID" class="form-label">Tipo Evento</label>
              @Html.DropDownList("EventoDeportivoID", null, htmlAttributes: new { @class = "form-control" })
            </div>

            <div class="mb-3 col-6">
              <label for="FechaInicio" class="form-label">Inicio</label>
              <input type="datetime-local" id="FechaInicio" class="form-control"
                value="@DateTime.Now.ToString("yyyy-MM-dd HH:mm")" />
            </div>

            <div class="mb-3 col-6">
              <label for="EstadoEmocionalInicio" class="form-label">Estado Emocional Inicio</label>
              @Html.DropDownList("EstadoEmocionalInicio", null, htmlAttributes: new { @class = "form-control" })
            </div>

            <div class="mb-3 col-6">
              <label for="FechaFin" class="form-label">Fin</label>
              <input type="datetime-local" id="FechaFin" class="form-control"
                value="@DateTime.Now.ToString("yyyy-MM-dd HH:mm")" />
            </div>

            <div class="mb-3 col-6">
              <label for="EstadoEmocionalFin" class="form-label">Estado Emocional Fin</label>
              @Html.DropDownList("EstadoEmocionalFin", null, htmlAttributes: new { @class = "form-control" })
            </div>
            <div class="mb-3 col-12">
              <label for="Observaciones" class="form-label texto-input ">Observaciones</label>
              <input type="text" class="form-control form-control-lg" id="Observaciones" placeholder="Observacion">
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" onclick="LimpiarModal()" class="btn btn-secondary"
          data-bs-dismiss="modal">Cancelar</button>
        <button type="button" onclick="GuardarRegistro()" class="btn btn-primary">Guardar</button>
      </div>
    </div>
  </div>
</div>

<div class="contenedor">
<table class="table">
  <thead class="td">
    <tr class="tr">
      <th>Ejercicios</th>
      <th>Lugar</th>
      <th>Evento</th>
      <th>Inicio</th>
      <th>Fin</th>
      <th>Estado Inicio</th>
      <th>Estado Fin</th>
      <th>Observaciones</th>
      <th>Editar</th>
      <th>Eliminar</th>
    </tr>
  </thead>
  <tbody id="tbody-ejerciciosfisicos">
  </tbody>
</table> 
</div>

@section Scripts {
  <script src="~/js/ejerciciofisicos-1.0.0.js"></script>
}
